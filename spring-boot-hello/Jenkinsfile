pipeline {
    agent any
    tools { 
      maven 'Maven 3.3.9'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }
        stage ('change directory') {
            steps {
                sh "pwd"
                dir('spring-boot-hello') {
                  sh "pwd"
                }
                sh "pwd"
            } 
        }

        stage ('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
}
